<h1 class="title is-1">Breweries</h1>

<div class="level">
  <div class="level-left">
    <div class="level-item">
      <%= link_to 'New Brewery', new_brewery_path, class: 'button is-primary' %>
    </div>
  </div>
</div>

<table class="table is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th> Country </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td> <%= link_to brewery.name, brewery %> </td>
        <td> <%= flag_icon(brewery.country_code.downcase) %> <%= brewery.country_name %> </td>
        <td><%= render 'table_buttons', object: brewery %></td>
      </tr>
    <% end %>
  </tbody>
</table>
