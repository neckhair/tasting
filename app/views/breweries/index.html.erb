<h1 class="title">Breweries</h1>

<table class="table is-bordered is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th> Country </th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td> <%= link_to brewery.name, brewery %> </td>
        <td> <%= flag_icon(brewery.country_code.downcase) %> <%= brewery.country_name %> </td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brewery', new_brewery_path, class: 'button' %>
