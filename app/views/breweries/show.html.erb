<h1 class="title"><%= @brewery.name %></h1>
<h2 class="subtitle"><%= flag_icon(@brewery.country_code.downcase) %> <%= @brewery.country_name %></h2>

<table class="table is-striped is-fullwidth is-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>ABV</th>
      <th>IBU</th>
      <th>Style</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, [@brewery, beer] %></td>
        <td><%= number_to_percentage beer.abv, precision: 1 %></td>
        <td><%= beer.ibu %></td>
        <td><%= beer.subcategory.name %></td>
        <td><%= link_to 'Edit', edit_brewery_beer_path(@brewery, beer) %></td>
        <td><%= link_to 'Destroy', [@brewery, beer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="level">
  <div class="field is-grouped">
    <p class="control"> <%= link_to 'Edit', edit_brewery_path(@brewery), class: "button is-link" %> </p>
    <p class="control"> <%= link_to 'Back', breweries_path, class: "button is-link" %> </p>
    <p class="control"> <%= link_to 'Add Beer', new_brewery_beer_path(@brewery), class: "button" %> </p>
  </div>
</div>
