<h1 class="title">Beers</h1>

<table class="table is-bordered is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Brewery</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, [beer.brewery, beer] %> </td>
        <td><%= link_to beer.brewery.name, beer.brewery %> <%= flag_icon(beer.brewery.country_code.downcase) %> </td>
        <td><%= render 'table_buttons', object: [beer.brewery, beer] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
