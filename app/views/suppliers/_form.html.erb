  </div>

  <div class="field">
    <%= form.label :url, class: "label" %>
    <div class="control">
      <%= form.text_field :url, id: :supplier_url, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :notes, class: "label" %>
    <div class="control">
      <%= form.text_area :notes, id: :supplier_notes, class: "textarea" %>
    </div>
  </div>

  <%= render "form_actions", form: form, back_to: supplier %>
<% end %>
